                                <field name="p_street" placeholder="Street..." class="o_address_street" />
                                <field name="p_street2" placeholder="Street 2..." class="o_address_street" />
                                <div>
                                <field name="p_city_id" placeholder="City" options="{'no_create': True, 'no_open': True}"/>
                            </div>
                            <div>
