      <!-- Employee -->
        <record id="hr.view_employee_form" model="ir.ui.view">
            <field name="name">hr.employee.form</field>
            <field name="model">hr.employee</field>
            <field name="arch" type="xml">
                <form string="Employee">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object"
                                    class="oe_stat_button" icon="fa-archive" groups="hr.group_hr_user">
                                <field name="active" widget="boolean_button"
                                    options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        <field name="image" widget='image' class="oe_avatar" options='{"preview_image":"image_medium"}'/>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="Employee's Name"/>
                            </h1>
                        </div>
                        <field name="category_ids" widget="many2many_tags" placeholder="e.g. Part Time" options="{'no_create_edit': True, 'no_create': True}" groups="hr.group_hr_user"/>
                        <notebook>
                            <page name="public" string="Public Information">
                                <group>
                                    <group string="Contact Information">

                                        <field name="address_id"
                                            context="{'show_address': 1}"
                                            options='{"always_reload": True, "highlight_first_line": True}'/>
                                        <field name="mobile_phone"/>
                                        <field name="work_location"/>
                                        <field name="work_email" widget="email"/>
                                        <field name="work_phone" invisible="1"/>
                                        <field name="virtual_mob_no"/>
                                        <field name="c_fos_handle"/>
                                        <field name="c_nf_chc"/>
                                        <field name="pf_id"/>
                                        <field name="uan" string="Nowfloats UAN Number"/>
                                        <field name="c_esi_num"/>
                                        <field name="user_id" string="Related User" groups="hr.group_hr_user"/>
                                        <field name="c_depart" invisible="1"/>
                                    </group>
                                    <group string="Position">
                                        <field name="department_id"/>
                                        <field name="job_id"/>
                                        <field name="intrnal_desig" groups="employee_master.group_hr_internal"/>
                                        <field name="parent_id" string="Dept. Manager"/>
                                        <field name="coach_id"/>
                                        <field name="c_recruiter_name"/>
                                        <field name="c_hr_name"/>
                                        <field name="c_pathsala_batch"/>
                                        <field name="c_pathsala_date"/>
                                        <field name="c_pathsala_city" options="{'no_create': True, 'no_open': True}"/>
                                        <field name="c_paathashala_score"/>
                                        <field name="c_nf_trainee"/>
                                        <field name="level"/>
	                                    <field name="grade"/>
                                        <field name="calendar_id"/>
                                        <field name="c_empl_type"/>
                                        <field name="rehire" required="1"/>
                                        <field name="idcard_status" readonly="1"/>
                                        <field name="photo_idcard" readonly="1" widget="url"/>
                                        <field name="reason" readonly="1" attrs="{'invisible':[('idcard_status','!=','Rejected')]}" groups="employee_master.group_employee_image_upload,hr.group_hr_manager"/>
                                        <field name="reject_reason" readonly="1" attrs="{'invisible':[('reason','!=','Other')]}" groups="employee_master.group_employee_image_upload,hr.group_hr_manager"/>
                                    </group>
                                </group>
                                <field name="notes" placeholder="Other Information ..." colspan="4"/>
                            </page>
                            <page string="Personal Information" groups="hr.group_hr_user">
                                <group>
                                    <group string = "Personal Details">
                                        <field name="gender"/>
                                        <field name="birthday"/>
                                        <field name="marital"/>
                                        <field name="anniversary_date" attrs="{'invisible':[('marital','not in',('married'))],'required':[('marital','in',('married'))]}"/>
                                        <field name="blood_group"/>
                                        <field name="religion"/>
                                        <field name="other_religion" readonly="1" attrs="{'invisible':[('religion','!=','Other')]}"/>
                                        <field name="emp_father"/>
                                        <field name="bank_account_id" context="{'default_partner_id': address_home_id}"/>
                                        <field name="emp_size"/>
                                    </group>
                                    <group string="Citizenship">
                                        <field name="country_id" options='{"no_open": True, "no_create": True}'/>
                                        <field name="identification_id" groups="hr.group_hr_user"/>
                                        <field name="passport_id" groups="hr.group_hr_user"/>
                                        <field name="c_dl_id"/>
                                        <field name="c_pre_uan"/>
                                        <field name="c_pf_num"/>
                                    </group>
                                    <group string="Contact Information">
                                        <field name="address_home_id"
                                            options='{"always_reload": True, "highlight_first_line": True}'/>
                                    </group>
                                    <group string="Education Details">
                                        <field name="high_edu_qual"/>
                                        <field name="highest_education" readonly="1"/>
                                        <field name="degree_id" readonly="1"/>
                                        <field name="other_degree" readonly="1" attrs="{'invisible':[('degree_id','!=',71)]}"/>
                                        <field name="college_name" readonly="1"/>
                                        <field name="university_name" readonly="1"/>
                                        <field name="unviversity_city" readonly="1"/>
                                        <field name="graduation_year" readonly="1"/>
                                    </group>
                                </group>
                                <group string="Emergency Contact Information">
                                    <field name="emegency_person_name" string="Name" readonly="1"/>
                                    <field name="emergency_contact_no" string="Contact Number" readonly="1"/>
                                    <field name="emergency_contact_relation" string="Relation" readonly="1"/>
                                </group>
                                <group string="Previous Employment Details(starting with the latest)">
                                    <label for="total_experience_years" string="Total Experience"/>
                                    <div name="total_experience_years" class="o_row">
                                        <field name="total_experience_years" placeholder="Years" readonly="1"/>year(s) 
                                        <field name="total_experience_months" placeholder="Months" readonly="1"/>month(s)
                                    </div>
                                    <label for="relevant_experience_years" string="Relevant Experience"/>
                                    <div name="relevant_experience" class="o_row">
                                        <field name="relevant_experience_years" placeholder="Years" readonly="1"/>year(s) 
                                        <field name="relevant_experience_months" placeholder="Months" readonly="1"/>month(s)
                                    </div>
                                    <field name="previous_employment" readonly="1">
                                        <tree editable="bottom">
                                            <field name="name"/>
                                            <field name="designation"/>
                                            <field name="doj"/>
                                            <field name="currently_working"/>
                                            <field name="dol"/>
                                            <field name="ctc"/>
                                            <field name="reason_leaving"/>
                                        </tree>
                                        <form>
                                            <field name="name"/>
                                            <field name="designation"/>
                                            <field name="doj"/>
                                            <field name="currently_working"/>
                                            <field name="dol"/>
                                            <field name="ctc"/>
                                            <field name="reason_leaving"/>
                                        </form>
                                    </field>
                                </group>
                                 <group string="Documents">
                                    <group>
                                        <field name="resume_link" readonly="1" widget="url"/>
                                        <field name="education_certificate_link" readonly="1" widget="url"/>
                                        <field name="pan_card_link" readonly="1" widget="url"/>
                                        <field name="aadhar_card_link" readonly="1" widget="url"/>
                                        <field name="cancel_cheque_link" readonly="1" widget="url"/>
                                    </group>
                                    <group>
                                        <field name="salary_slip_link" readonly="1" widget="url"/>
                                        <field name="salary_slip_link1" readonly="1" widget="url"/>
                                        <field name="salary_slip_link2" readonly="1" widget="url"/>
                                        <field name="resignation_acceptance_link" readonly="1" widget="url"/>
                                    </group>
                                </group>
                              <notebook>
                               <page string="Family Details">   
    			                    <field name="family_details">
    			                     <tree editable="top">
    				                    <field name="name"/>
    				                    <field name="dob"/>
    				                    <field name="relation"/>
    				                    <field name="gender"/>
                                         <field name="c_cont_num"/>
    				                    <field name="employee_id" invisible="1"/>
    			                     </tree>
    			                    </field>
    			             </page>
                            <page string="Joining Process">
                             <group>
                                 <group>
                                     <separator string="Address Proof"/>
                                     <newline/>
                                     <field name="current_addr_proof"/>
                                     <field name="permanent_addr_proof"/>
                                 </group>
                                 <group>
                                     <separator string="ID Proof"/>
                                     <newline/>
                                     <field name="id_proof_name" invisible="1"/>
                                     <field name="c_pan_proof_name" invisible="1"/>
                                     <field name="c_pass_proof_name" invisible="1"/>
                                     <field name="c_voter_proof_name" invisible="1"/>
                                     <field name="id_proof" filename="id_proof_name"/>
                                     <field name="c_pan_proof" filename="c_pan_proof_name"/>
                                     <field name="c_voter_proof" filename="c_voter_proof_name"/>
                                     <field name="c_pass_proof" filename="c_pass_proof_name"/>
                                 </group>
                                 <group>
                                     <separator string="Educational Certificates"/>
                                     <newline/>
                                     <field name="certif_12"/>
                                     <field name="ug_certifcate"/>
                                 </group>
                                 <group>
                                     <separator string="Previous Company Payslip/Relieving Letter"/>
                                     <newline/>
                                     <field name="payslip_filename1" invisible="1"/>
                                     <field name="payslip_filename2" invisible="1"/>
                                     <field name="payslip_filename3" invisible="1"/>
                                     <field name="prev_reliving_lttr_filename" invisible="1"/>
                                     <field name="previous_pay_slip" filename="payslip_filename1"/>
                                     <field name="previous_pay_slip2" filename="payslip_filename2"/>
                                     <field name="previous_pay_slip3" filename="payslip_filename3"/>
                                     <field name="prev_reliving_lttr" filename="prev_reliving_lttr_filename"/>
                                 </group>
                             </group>
                                
                                <button name="%(wiz_emp_join_date_action)d" string="Update Joining Date"
                                     type="action" class="oe_stat_button" groups="hr.group_hr_manager"/>
                            </page>
    			                  </notebook>  
                            </page>
                            <page string="HR Settings" groups="hr.group_hr_user">
                                <group>
                                    <group string='Status' name="active_group">
                                        <field name="company_id" groups="base.group_multi_company"/>
                                        <field name="candidate_id" readonly="1"/>
                                        <field name="probation_date" />
                                        <field name="visibility"/>
                                    </group>
                                    <group>
                                        <field name="c_rem_count" invisible="1"/>
                                        <field name="c_ldt"/>
                                        <field name="buddy_assign_date" readonly="1"/>
                                        <field name="c_nf_buddy" readonly="1"/>
                                    </group>
                                   <group>
	                                <separator string="Offer/NDA Information"/>
	                                  <newline/>
							          <field name="offer_letter"/>
							          <field name="nda"/>
							          <field name="oppointment_letter" filename="oppointment_filename"/>
							          <field name="oppointment_filename" invisible="1"/>
							        </group> 
                                </group>
                            </page>
                            <page string="People Engagement Team" groups="employee_master.group_hr_people_engagement,hr.group_hr_manager">
                                <group>
                                    <field name="engagement_team_submit" invisible="1"/>
                                    <field name="exit_mode" attrs="{'readonly':[('engagement_team_submit','=',True)]}"/>
                                    <field name="exit_mode_date" attrs="{'readonly':[('engagement_team_submit','=',True)]}"/>
                                    <field name="exit_mode_status" attrs="{'readonly':[('engagement_team_submit','=',True)]}"/>
                                    <field name="manager_comment" attrs="{'readonly':[('engagement_team_submit','=',True)]}"/>
                                    <field name="employee_comment" attrs="{'readonly':[('engagement_team_submit','=',True)]}"/>
                                    <field name="engagement_team_comment" attrs="{'readonly':[('engagement_team_submit','=',True)]}"/>
                                </group>
                                <button name="submit_engagement_team" string="Handover to HR" type="object" class="oe_highlight" attrs="{'invisible':[('engagement_team_submit','=',True)]}"/>
                            </page>

                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
   
   
