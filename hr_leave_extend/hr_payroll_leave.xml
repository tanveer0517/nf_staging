        <record id="hr_holidays_form_inherit" model="ir.ui.view">
            <field name="name">hr.holidays.form</field>
            <field name="model">hr.holidays</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="hr_holidays.edit_holiday_new"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_approve']" position="replace">
                    <button string="Approve" name="action_approve" states="confirm" type="object" class="oe_highlight"/>
                </xpath>

                <xpath expr="//button[@name='action_refuse']" position="replace">
                    <button string="Refuse" name="action_refuse" states="confirm,validate1" type="object" />
                    <button string="Refuse" name="action_refuse" states="validate" type="object" groups="hr_holidays.group_hr_holidays_user"/>
                </xpath>

                <xpath expr="//field[@name='holiday_status_id']" position="after">
                    <field name="day_type" required="1"/>
                </xpath>

                <xpath expr="//field[@name='report_note']/parent::div" position="replace">
                    <div attrs="{'invisible':[('type','=','add')]}">
                        <separator string="Comment by Manager"/>
                       <field name="report_note" placeholder="e.g. Report to the next month..."/>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="nf_view_employee_filter" model="ir.ui.view">
            <field name="name">hr.holidays.search</field>
            <field name="model">hr.holidays</field>
            <field name="inherit_id" ref="hr_holidays.view_hr_holidays_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='my_team_leaves']" position="replace">
                    <filter name="my_team_leaves" string="My Team Leaves" domain="['|',('employee_id.parent_id.user_id', '=', uid),('employee_id.coach_id.user_id', '=', uid)]"/>
                </xpath>
                <xpath expr="//filter[@name='my_leaves']" position="replace">
                    <filter string="My Requests" name="my_leaves" domain="[('employee_id.user_id', '=', uid)]"/>
                </xpath>
                
                <xpath expr="//filter[@name='year']" position="replace">
                    <filter name="year" string="Active"
                        domain="[('holiday_status_id.active', '=', True)]" help="Active Leaves and Allocations"/>
                    <filter name="current_year" string="Current Year" domain="['|',('date_to','&gt;=',time.strftime('%Y-01-01 00:00:01')),('date_to','=',False)]"/>
                </xpath>
            </field>
        </record>
       
</data>
</openerp>
