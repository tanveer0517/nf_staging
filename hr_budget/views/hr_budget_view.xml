        				<field name="alert_date"/>
        				<field name="attach" invisible="1"/>
	        	</tree>
	        </field>
	    </record>
	    
	    <record id="document_expire_action" model="ir.actions.act_window">
	        <field name="name">Employee Documents</field>
	        <field name="res_model">docs.lines</field>
	        <field name="view_type">form</field>
	        <field name="view_mode">tree,form</field>
	        <field name="domain">[('alert_check','=',True)]</field>
	        <field name="view_id" ref="document_expire_tree_view"/>
	        <field name="help" type="html">
	          <p class="oe_view_nocontent_create">
	            Click to setup a new Upload Documents Data. 
	          </p>
	        </field>
	    </record>
	    
   <menuitem
        sequence="2"
        id="menu_document_expire"
        name="Documents Expire"
        parent="menu_upload_docs_form_child"
        action="document_expire_action"/>
        
	    
	    	    <!--  Upload Documents Data Close -->	
		
	    <record model="ir.ui.view" id="resign_view_form">
	        <field name="name">Resign Form</field>
	        <field name="model">resign</field>
	        <field name="arch" type="xml">
	        	<form string=" Resign Form">
					<header>
					   <button name="confirm" string="Confirm" type="object" attrs="{'invisible':['|',('state','!=','Draft'),('check_access','not in',['Man','ManHR','HR','ManDepMan'])]}"/>
					   <button name="approve" states="Confirm" string="Approve" type="object" groups="hr.group_hr_manager"/>
						<button name="%(wiz_resign_action)d" states="Approve" string="Update Last Working Date" type="action" groups="hr.group_hr_manager"/>
						<button name="cancel" states="Draft,Confirm" string="Cancel" type="object" class="oe_stat_button"/>
					   <button name="reset_to_draft" states="Cancel" string="Reset to Draft" type="object" groups="hr.group_hr_manager"/>
					   <field name="state" widget="statusbar"/>
				  	</header>
          			<sheet>
          				<div style="color:green;text-align:center;" attrs="{'invisible':[('nodues_status','!=','Done')]}">
	                        <p><strong>NoDues Done.</strong></p>
	                    </div>
	                    <div style="color:red;text-align:center;" attrs="{'invisible':['|',('nodues_status','=','Done'),('state','!=','Approve')]}">
	                        <p><strong>NoDues Pending.</strong></p>
	                    </div>
						<group>
							<group>
								<field name="name" required="1" options="{'no_create': True}" attrs="{'readonly':[('state','!=',False)]}"/>
								<field name="emp_id" readonly="1"/>
								<field name="branch_id" options="{'no_create': True}" readonly="1"/>
								<field name="reason_for_leaving" required="1" attrs="{'readonly':[('state','in',['Confirm','Approve','Cancel'])]}"/>
								<field name="work_mobile" readonly="1"/>
								<field name="date_resign" readonly="1"/>
								<field name="confirm_date" readonly="1" attrs="{'invisible':[('state','not in',['Confirm','Approve'])]}"/>
								<field name="approve_date" readonly="1" attrs="{'invisible':[('state','!=','Approve')]}"/>
								<field name="cancel_date" readonly="1" attrs="{'invisible':[('state','!=','Cancel')]}"/>
							</group>
              				<group>
								<field name="doj" readonly="1"/>
								<field name="designation" readonly="1"/>
								<field name="date_of_leaving" required="1" attrs="{'readonly':[('state','in',['Confirm','Approve','Cancel'])]}"/>
								<field name="check_access" invisible="1"/>
								<field name="c_user_id" invisible="1"/>
								<field name="c_man_user_id" readonly="1"/>
								<field name="c_rep_mngr_user" readonly="1"/>
								<field name="three_months_revenue" invisible="1"/>
							</group>
						</group>
						<group string="Last 3 Months Net Revenue">
							<group>
								<field name="first_month_revenue" readonly="1"/>
								<field name="second_month_revenue" readonly="1"/>
								<field name="third_month_revenue" readonly="1"/>
							</group>
						</group>
						<notebook>
							<page string="Manager Feedback Details" attrs="{'invisible':[('check_access','not in',['Man','ManHR','HR','ManPET','PET','ManDepMan','DepMan'])]}">
								<group>
								<field name="man_last_work_date" attrs="{'readonly':['|',('state','not in',['Draft']),('check_access','not in',['Man','ManHR','ManDepMan'])]}"/>
								<field name="man_rehire_eligibility" attrs="{'readonly':['|',('state','not in',['Draft']),('check_access','not in',['Man','ManHR','ManDepMan'])]}"/>
								<field name="man_reason_rehire" attrs="{'readonly':['|',('state','not in',['Draft']),('check_access','not in',['Man','ManHR','ManDepMan'])]}"/>
								<field name="man_notice_served" attrs="{'readonly':['|',('state','not in',['Draft']),('check_access','not in',['Man','ManHR','ManDepMan'])]}"/>
								<field name="man_np_waived" attrs="{'readonly':['|',('state','not in',['Draft']),('check_access','not in',['Man','ManHR','ManDepMan'])]}"/>
								<field name="man_process_fnf" attrs="{'readonly':['|',('state','not in',['Draft']),('check_access','not in',['Man','ManHR','ManDepMan'])]}"/>
								<field name="man_reason_fnf" attrs="{'readonly':['|',('state','not in',['Draft']),('check_access','not in',['Man','ManHR','ManDepMan'])]}"/>
								<field name="notes" attrs="{'readonly':['|',('state','not in',['Draft']),('check_access','not in',['Man','ManHR','ManDepMan'])]}"/>
								</group>
							</page>
							<page string="Department Manager Feedback" attrs="{'invisible':[('check_access','not in',['ManDepMan','DepMan','HR','ManPET','PET'])]}">
								<group>
									<field name="dept_man_feedback" attrs="{'readonly':['|',('state','not in',['Draft','Confirm']),('check_access','not in',['ManDepMan','DepMan'])]}" string="Comment"/>
								</group>
							</page>
							<page string="HR Feedback Details" attrs="{'invisible':[('check_access','not in',['ManHR','HR','ManPET','PET'])]}">
								<group>
								<field name="hr_last_work_date"/>
								<field name="hr_rehire_eligibility"/>
								<field name="hr_reason_rehire"/>
								<field name="hr_notice_served"/>
								<field name="hr_np_waived"/>
								<field name="mail_approve"/>
								<field name="c_hr_comments"/>
								</group>
							</page>
							<page string="Nodues Details" attrs="{'invisible':[('check_access','not in',['ManHR','HR'])]}">
								<group>
								  <group string="Administration">
								  	<field name="nodues_status" invisible="1"/>
					                <field name="uber_ola_deactivate"/>
					                <field name="laptop_submit"/>
					                <field name="laptop_login"/>
					                <field name="software_check"/>
					              </group>
					              <group string="Finance">
					                <field name="income_tax"/>
					                <field name="advances"/>
					                <field name="happay_card_deactivate"/>
					              </group>
					              <group string="Sales Operation">
					                <field name="cheque_bounce"/>
					                <field name="incentives"/>
					                <field name="previous_cases"/>
					              </group>
					              <group string="Manager">
					                <field name="knowledge_transfer"/>
					                <field name="data_collection"/>
					              </group>
					              <group string="Human Resource">
					                <field name="id_card"/>
									<field name="c_email_deactive"/>
									<field name="c_app_deactive"/>
					                <field name="visiting_card"/>
					                <button name="confirm_nodues" type="object" string="Confirm NoDues" attrs="{'invisible':[('nodues_status','=','Done')]}" class="oe_highlight" groups="hr.group_hr_manager"/>
					              </group>
					              <group>
					              	<field name="nodues_date" readonly="1" attrs="{'invisible':[('nodues_status','!=','Done')]}"/>
									<field name="nodues_by" readonly="1" attrs="{'invisible':[('nodues_status','!=','Done')]}"/>
								  </group>
					            </group>
							</page>
							<page string="Exit Formalities" attrs="{'invisible':[('check_access','not in',['ManHR','HR'])]}">
								<group>
									<group string="F&amp;F Process">
										<field name="exit_status" invisible="1"/>
										<field name="hr_process_fnf"/>
										<field name="fnf_date"/>
										<field name="hr_reason_fnf"/>
									</group>
									<group string="Relieving Letter">
										<field name="relieving_letter"/>
										<field name="rl_date"/>
										<field name="rl_comment"/>
									</group>
									<group>
										<field name="c_emp_replacer"/>
										<field name="exit_done_date" readonly="1" attrs="{'invisible':[('exit_status','!=','Done')]}"/>
										<field name="exit_done_by" readonly="1" attrs="{'invisible':[('exit_status','!=','Done')]}"/>
										<field name="email_link" widget="url"/>
									</group>
								</group>
								<button name="confirm_exit" type="object" string="Confirm Exit" attrs="{'invisible':[('exit_status','=','Done')]}" class="oe_highlight" groups="hr.group_hr_manager"/>
							</page>
						</notebook>
          			</sheet>
				<div class="oe_chatter" groups="hr.group_hr_manager">
					<field name="message_follower_ids" widget="mail_followers" groups="hr.group_hr_manager"/>
					<field name="message_ids" widget="mail_thread" groups="hr.group_hr_manager"/>
				</div>
			</form>
	        </field>
	    </record>

	    <record model="ir.ui.view" id="resign_view_tree">
	        <field name="name">Resignation</field>
	        <field name="model">resign</field>
	        <field name="arch" type="xml">
	        	<tree string="Resignation" colors="green:nodues_status=='Done';red:nodues_status!='Done' and state=='Approve'">
        			<field name="name"/>
    				<field name="emp_id"/>
    				<field name="designation"/>
    				<field name="branch_id"/>
    				<field name="date_resign"/>
    				<field name="state"/>
    				<field name="nodues_status" invisible="1"/>
	        	</tree>
	        </field>
	    </record>

